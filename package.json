{
  "name": "winnipeg",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run watch & nodemon index",
    "lint": "standard --fix",
    "start": "NODE_ENV=production node index",
    "deploy": "now && now alias",
    "build": "npm run build:css && npm run build:html && npm run build:js",
    "build:css": "csso src/css.css public/min.css",
    "build:html": "html-minifier --collapse-whitespace --minify-js --output public/min.html src/html.html",
    "build:js": "uglifyjs src/js.js --compress --mangle --output public/min.js",
    "watch": "npm run watch:css & npm run watch:html & npm run watch:js",
    "watch:css": "onchange src/css.css --initial -- npm run build:css",
    "watch:html": "onchange src/html.html --initial -- npm run build:html",
    "watch:js": "onchange src/js.js --initial -- npm run build:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zertz/winnipeg.git"
  },
  "author": "Pier-Luc Gendreau",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Zertz/winnipeg/issues"
  },
  "homepage": "https://github.com/Zertz/winnipeg#readme",
  "dependencies": {
    "aws-sdk": "^2.125.0",
    "fastify": "^0.29.0",
    "fastify-static": "^0.2.0",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "csso-cli": "^1.1.0",
    "html-minifier": "^3.5.5",
    "nodemon": "^1.12.1",
    "onchange": "^3.2.1",
    "standard": "^10.0.3",
    "uglify-es": "^3.1.3"
  }
}
